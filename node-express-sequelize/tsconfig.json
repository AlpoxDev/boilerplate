{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",

    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
